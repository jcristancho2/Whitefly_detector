# .env.example - Configuración de variables de entorno
# Copiar a .env y ajustar valores según tu entorno

# Entorno de ejecución
ENVIRONMENT=development  # development, production
LOG_LEVEL=info          # debug, info, warning, error

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# Modelo de IA
MODEL_PATH=models/whitefly_detector.h5
IMG_SIZE=224
CONFIDENCE_THRESHOLD=0.7

# Base de datos (opcional - para producción)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=whitefly_db
# DB_USER=whitefly_user
# DB_PASSWORD=tu_password_seguro

# Redis (opcional - para caché)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Ubicación del cultivo
LOCATION=Mesa de los Santos, Colombia
CLIMATE=Cálido

# Límites de la aplicación
MAX_FILE_SIZE=10485760  # 10MB en bytes
MAX_HISTORY_ITEMS=100

# Seguridad (para producción)
# SECRET_KEY=tu_clave_secreta_muy_larga_y_segura
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=*  # En producción, especificar dominios: http://localhost:3000,https://tu-app.com

# Almacenamiento
UPLOAD_DIR=uploads
MODELS_DIR=models
LOGS_DIR=logs

# Email para notificaciones (opcional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASSWORD=tu_password_app
# ALERT_EMAIL=destinatario@example.com